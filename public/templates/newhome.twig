{% extends 'base.twig' %}
{% block head %}
	<link rel="stylesheet" href="css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
	<link rel="stylesheet" href="css/index.css">
	<link rel="stylesheet" href="css/newhome.css">

	<script src="js/vendor/jquery-3.3.1.min.js"></script>
{% endblock %}
{% block body %}
<div id="header">
	<div class="container">
		<div class="logo">EnderIO</div>
	</div>
</div>
<div class="container">
	<div id="modules">
		{% for name, module in modules %}
			<div class="module">
				<h2>EnderIO {{ name }}<span class="expand-arrow fa fa-plus"></span></h2>
				<div class="desc">
					<img src="images/modules/{{ module }}.png"/>
					{% include 'modules/' ~ module ~ '.twig' %}
				</div>
			</div>
		{% endfor %}
	</div>
</div>
<script>
	$( function() {
		$( ".module .desc").hide();
		$( ".module h2" ).click(function() {
			$(this).next().slideToggle();
			$(this).toggleClass('open');
		});
	});
</script>
{% endblock %}
